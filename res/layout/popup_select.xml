<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_left10" >

    <!-- //280 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size48_33"
        android:background="@color/black"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <ImageButton
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/margin5"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="隐私密码设置"
            android:textColor="@color/white"
            android:textSize="@dimen/title_22" />

        <ImageButton
            android:id="@+id/select_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@null"
            android:src="@drawable/selector_dialog_close" />

        <View
            android:id="@+id/setPwd_line"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/select_close"
            android:background="@drawable/fengexian" />
    </RelativeLayout>

    <ListView
        android:id="@+id/select_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:divider="@drawable/hbfgx"
        android:fadingEdgeLength="0dip"
        android:padding="@dimen/margin5" >
    </ListView>

</LinearLayout>