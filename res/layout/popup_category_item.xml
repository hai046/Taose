<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/size63_33"
    android:gravity="center_vertical"
   	android:paddingLeft="@dimen/margin15"
   	android:paddingRight="@dimen/margin15"
    android:orientation="horizontal" >
	
    <ImageView
        android:id="@+id/popup_item_image"
        android:layout_width="@dimen/size55"
        android:layout_height="@dimen/size60"
        android:padding="@dimen/margin5"
        android:scaleType="centerCrop"
        android:src="@drawable/zwt1" />

    <TextView
        android:id="@+id/popup_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:layout_marginLeft="@dimen/margin5"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="母婴用品"
        android:textSize="@dimen/title_22" >
    </TextView>

</LinearLayout>