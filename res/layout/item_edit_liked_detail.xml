<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_liked_edit"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/size105"
    android:gravity="center_vertical"
    android:minHeight="@dimen/size97"
    android:paddingBottom="@dimen/margin8"
    android:paddingTop="@dimen/margin3" >

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="@dimen/size90"
        android:layout_height="@dimen/size90"
        android:layout_marginLeft="13.33dip"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@drawable/image_border"
        android:scaleType="centerCrop"
        android:src="@drawable/zwt1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/detail_image"
        android:maxLines="2"
        android:text="优孕礼包 艾宝排卵试纸 欧姆龙电子体温计341 早孕试纸包邮 限量"
        android:textColor="@color/Black"
        android:textSize="@dimen/title_18" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_price"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dip"
        android:maxLines="2"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/title_12" />

    <TextView
        android:id="@+id/tv_creditScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_volume"
        android:gravity="top"
        android:maxLines="2"
        android:paddingBottom="2dip"
        android:singleLine="true"
        android:textSize="@dimen/title_12" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@id/detail_image"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="￥7.90"
        android:textColor="@color/red"
       android:textSize="@dimen/title_18"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_selectOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:singleLine="true"
        android:src="@drawable/delete_addstore"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dip"
        android:background="@null"
        android:src="@drawable/selector_buy_small" />

</RelativeLayout>